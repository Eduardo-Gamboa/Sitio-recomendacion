            </li>
          </ul>
          <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
              <% results.forEach((juego)=> { %>
                <div class="card mb-3" style="max-width: 1020px;">
                  <div class="row g-0">
                    <div class="col-md-4">
                      <img src="<%=juego.imagen %>" style="width:240px; height:320px" alt="...">
                    </div>
                    <div class="col-md-6">
                      <div class="card-body">
                        <h5 class="card-title">
                          <%=juego.titulo %>
                        </h5>
                        <p class="card-text">
                          <%=juego.descripcion %>
                        </p>
                        <p class="card-text" hidden>
                          <%=juego.id_juegos %>
                        </p>
                      </div>
                    </div>
                    <div class="col-md-2">
                      <div class="card-body">
                        <a href="/edit/<%=juego.id_juegos %>" class="btn btn-primary">Aceptar <br></a>
                        <br><br>
                        <a href="/delete/<%=juego.id_juegos %>" class="btn btn-danger">Eliminar</a>
                      </div>
                    </div>
                  </div>
                </div>
                <%})%>

            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">



