    <div class="container" style="padding: 0  350px;">
        <div class="card" style="width: 30rem;"> 
            <div class="card-header" style="text-align: center;"><h2>Recomendar VideoJuego</h2></div>
            <div class="card-body">
                <form action="/save_juego" method="post">
                    <div class="form-group">
                        <label>Titulo</label>
                        <input type="text" id="titulo" placeholder="Uncharter 2" class="form-control" name="titulo" tabindex="1" >
                    </div>
                    <br>
                    <div class="form-group">
                        <label>Descripcion</label>
                        <textarea name="descripcion" placeholder="Es un juego de ..."  id="descripcion" class="form-control" rows="3" tabindex="2"></textarea>
                    </div>
                    <br>
                    <div class="form-group">
                        <label>Imagen</label>
                        <input type="url" id="imagen" placeholder="Insertar solo url de la imagen" class="form-control" name="imagen" tabindex="3" >
                    </div>
                    <br>
                    
                    <div class="form-group">
                        <input type="hidden" id="status" class="form-control" name="status" value="2" tabindex="4" >
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary" style="width: 445px;" tabindex="5">Registrarme</button>
                    </div>
                </form>
            </div>
